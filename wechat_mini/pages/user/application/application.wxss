/* pages/user/application/application.wxss */

.container {
  display: block;
  padding: 0rpx;
}

page {
  background-color: #f9f8f9;
}

.header {
  width: 100%;
  margin-top: 20rpx;
  border-bottom: 1rpx #aaa solid;
}

.search_container {
  align-items: center;
  border-radius: 1rpx #aaa solid;
  padding-bottom: 20rpx;
}

.search_input {
  width: 320rpx;
  display: inline-block;
  margin-left: 50rpx;
  margin-top: 10rpx;
  font-size: 32rpx;
}

.searchbtn {
  float: right;
  font-size: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-top: 2rpx;
  border-radius: 20rpx;
  border: 1rpx #aaa solid;
  margin-right: 50rpx;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  border-right: none;
  color: #5d5d5d;
  font-size: 28rpx;
}

.red {
  line-height: 100rpx;
  text-align: center;
  color: #1296db;
  flex: 1;
  border-right: none;
  border-bottom: 4rpx solid #1296db;
  font-size: 28rpx;
}

.show {
  display: block;
}

.card {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx 30rpx 20rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  border: 1rpx #aaa solid;
  border-radius: 20rpx;
}

.card_left {
  width: 80%;
}

.card_right {
  margin-left: 20rpx;
}

.info {
  display: flex;
}

.time {
  display: flex;
  align-content: center;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #aaa;
}

.status {
  color: red;
}

.cancelbtn {
  width: 160rpx;
  height: 60rpx;
  font-size: 24rpx;
}

.usage, .label {
  margin-top: 10rpx;
  padding-right: 40rpx;
  font-size: 32rpx;
}

.label {
  color: #aaa;
}

.endtime {
  margin-left: 20rpx;
}

.card_label {
  font-size: 32rpx;
  color: #1296db;
}

.title, .num {
  font-size: 32rpx;
}

.num_label {
  margin-left: 20rpx;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}
