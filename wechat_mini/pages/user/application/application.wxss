/* pages/user/application/application.wxss */

.container {
  display: block;
  padding: 0rpx;
}

page {
  background-color: #f9f8f9;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
}

.default {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  border-right: none;
  color: #5d5d5d;
  font-size: 28rpx;
}

.red {
  line-height: 100rpx;
  text-align: center;
  color: #1296db;
  flex: 1;
  border-right: none;
  border-bottom: 4rpx solid #1296db;
  font-size: 28rpx;
}

.show {
  display: block;
}

.card{
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx 30rpx 20rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  border: 1rpx #aaa solid;
  border-radius: 20rpx;
}
.card_left{
  width: 80%;
}
.card_right{
  margin-left: 20rpx;
}
.info{
  display: flex;
}
.time{
  display: flex;
  align-content: center;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #aaa;
}
.usage{
  margin-top: 10rpx;
  padding-right: 40rpx;
  font-size: 32rpx;
}
.endtime{
    margin-left: 20rpx;
}
.status{
  font-size: 32rpx;
  background-color: #1296db;
  padding: 5rpx 10rpx 5rpx 10rpx ;
  color: white;
  border-radius: 10rpx;
}
.card_label{
  font-size: 32rpx;
  color: #1296db;
}
.num_label{
  margin-left: 20rpx;
  margin-top: 5rpx;
}
.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}
